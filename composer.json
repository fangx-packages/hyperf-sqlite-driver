{
  "name": "fangx/sqlite-driver",
  "description": "hyperf sqlite driver",
  "type": "library",
  "keywords": [
    "php",
    "hyperf",
    "sqlite"
  ],
  "authors": [
    {
      "name": "nfangxu",
      "email": "nfangxu@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-swoole": ">=4.5",
    "hyperf/database": "2.1.*",
    "hyperf/utils": "2.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "mockery/mockery": "^1.0",
    "hyperf/testing": "2.1.*",
    "friendsofphp/php-cs-fixer": "^2.9"
  },
  "suggest": {
    "doctrine/dbal": "Required to rename columns (^3.0)."
  },
  "autoload": {
    "psr-4": {
      "Fangx\\SQLite\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "tests/"
    }
  },
  "extra": {
    "hyperf": {
      "config": "Fangx\\SQLite\\ConfigProvider"
    }
  },
  "scripts": {
    "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
    "cs-fix": "php-cs-fixer fix $1"
  },
  "config": {
    "sort-packages": true
  },
  "license": "MIT"
}